div.wrapper-loginpage

  / =============================================== Mobile Layout ========================================================
  div.mobileloginpage
    div.mobilelogin
      h3.mobilewelcome
        strong DragonTweet
      h5.mobiledescription DragonTweet is the 21st century app that connects fighters with super powers from DragonBall Z. Sign up to challenge other fighters in the universe. Throw your first ki blast today! Log into the Demo Account with the email and password given below.
      div.mobilesignin
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control-sm' } }) do |f|
          div.mobile-form-inputs
            = f.input :email, required: true, autofocus: true, placeholder: 'defaultuser@gmail.com', label: false
            = f.input :password, required: false, placeholder: 'defaultuser', label: false
            = f.input :remember_me, as: :boolean, wrapper_html: {class: 'mb-0'}, label_html: {class: 'small'} if devise_mapping.rememberable?
          div.mobile-form-actions
            = f.button :submit, "Log in", class: 'btn btn-outline mobileloginbtn'
      div.mobilebuttons
        / = link_to "Log In", new_user_session_path, class: "btn btn-outline mobileloginbtn"
        / = link_to "Sign Up", new_user_registration_path, class: "btn btn-outline mobilesignupbtn"
      div.sharedlinks
        = link_to "Sign Up", new_user_registration_path, class: 'mobilesignup'
        = render "devise/shared/links"

  / ============================================== Non Mobile Layout ======================================================
  div.row.loginpage
    div.welcome
      h3.welcomemessage
        strong DragonTweet <br>
      h5.welcomedescription DragonTweet is the 21st century app that connects fighters with super powers from DragonBall Z. Sign up to challenge other fighters in the universe. Throw your first ki blast today! Log into the Demo Account with the email and password given on the right.
    div.signin
      div#login-form
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control-sm' } }) do |f|
          div.form-inputs
            = f.input :email, required: true, autofocus: true, placeholder: 'defaultuser@gmail.com', label: false
            = f.input :password, required: false, placeholder: 'defaultuser', label: false
            = f.input :remember_me, as: :boolean, wrapper_html: {class: 'mb-0'}, label_html: {class: 'small'} if devise_mapping.rememberable?
          div.form-actions
            = f.button :submit, "Log in", class: 'btn btn-sm btn-outline-primary nonmobile'
        = render "devise/shared/links"

      div#signup-form
        = render "devise/shared/registration_form"
